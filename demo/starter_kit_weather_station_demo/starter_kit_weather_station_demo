# this is the main script, if this demo was installed using "setup.py install"

import sys
if (sys.hexversion & 0xFF000000) != 0x03000000:
    print('Python 3.x required')
    sys.exit(1)

try:
    from starter_kit_weather_station_demo.main import main

    if __name__ == "__main__":
        main()
except ImportError:
    print('Could not import starter_kit_weather_station_demo. Please make sure that the demo is installed properly. ' + \
          'If you want to start the demo from source, you should direclty call "python main.py".')

    sys.exit(1)
